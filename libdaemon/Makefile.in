DCLIENT_SOURCE=\
	libdaemon/client/daemon-io.c \
	libdaemon/client/config-util.c \
	libdaemon/client/daemon-client.c
DCLIENT_DEPENDS=$(subst .c,.d,$(DCLIENT_SOURCE))
DCLIENT_OBJECTS=$(subst .c,.o,$(DCLIENT_SOURCE))
CLEAN_TARGETS+=$(DCLIENT_DEPENDS) $(DCLIENT_OBJECTS)

DSERVER_SOURCE=\
	libdaemon/server/daemon-server.c \
	libdaemon/server/daemon-log.c
DSERVER_DEPENDS=$(subst .c,.d,$(DSERVER_SOURCE))
DSERVER_OBJECTS=$(subst .c,.o,$(DSERVER_SOURCE))
CLEAN_TARGETS+=$(DSERVER_DEPENDS) $(DSERVER_OBJECTS)

libdaemon/client/libdaemonclient.a: $(DCLIENT_OBJECTS)
	@echo "    [AR] $@"
	$(Q) $(RM) $@
	$(Q) $(AR) rsv $@ $(DCLIENT_OBJECTS) > /dev/null

libdaemon/server/libdaemonserver.a: $(DSERVER_OBJECTS)
	@echo "    [AR] $@"
	$(Q) $(RM) $@
	$(Q) $(AR) rsv $@ $(DSERVER_OBJECTS) > /dev/null

-include $(DCLIENT_DEPENDS) $(DSERVER_DEPENDS)

